{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration":true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors":true,
    "target": "es2015",
    "outDir": "../dist/esm",
    "paths": {
      "@entityforge/validator": ["../dist/esm/validator"],
      "@entityforge/generate": ["../dist/esm/generate"],
      "@entityforge/check": ["../dist/esm/check"],
      "@entityforge/forge": ["../dist/esm/forge"]
    }
  },
  "files":[
    "./entity-forge.ts",
    "../typings/index.d.ts"
  ]
}
